Fenetre:
    labelvie:affichagevie
    labelscore:affichagescore
    labelnb1:affichagenb1
    labelnb2:affichagenb2
    labeloperant:affichagoperant
    labelnombre:affichagenombre
    labelprecedent:affichageprecedent
    BoxLayout:
        orientation: "vertical"
        
        BoxLayout:
            size_hint_y:0.15
            Label:
                size_hint_x:0.3
                id:affichagevie
                text:"Vies : 5"
            Label:
                size_hint_x:0.3
                id:affichagescore
                text:"Score : 0"
            Button:
                size_hint_x:0.3
                text:"Rejouer"
                on_press:root.rejouer()
        BoxLayout:
            Label:
                font_size: self.width/2
                id:affichagenb1
                text:""
            Label:
                font_size: self.width/2
                id:affichagoperant
                text:""
            Label:
                font_size: self.width/2
                id:affichagenb2
                text:""
        BoxLayout:
            Label:
                color: 1,0,0,1
                font_size: self.width/5
                id:affichageprecedent
                text:""  
        BoxLayout:
            Label:
                
                font_size: self.width/8
                id:affichagenombre
                text:"D"    
        GridLayout:
            id: "clavier"
            padding:10
            cols: 3
            
            Button:

                text:"1"
                on_press: root.chiffreRentre(1)
                
                background_normal: "Images/1.png"
                
            Button:
                text:"2"
                on_press: root.chiffreRentre(2)
            
            Button:
                text:"3"
                on_press: root.chiffreRentre(3)
            
            Button:
                text:"4"
                on_press: root.chiffreRentre(4)
            
            Button:
                text:"5"
                on_press: root.chiffreRentre(5)
            
            Button:
                text:"6"
                on_press: root.chiffreRentre(6)
            
            Button:
                text:"7"
                on_press: root.chiffreRentre(7)
            
            Button:
                text:"8"
                on_press: root.chiffreRentre(8)
            
            Button:
                text:"9"
                on_press: root.chiffreRentre(9)
            
            Button:
                text:"Corriger"
                background_color: (1, 0.1, 0.1, 1)
                on_press: root.corriger()
            
            Button:
                text:"0"
                on_press: root.chiffreRentre(0)
            
            Button:
                text:"Valider"
                background_color: (0.1, 1, 0.1, 1)
                on_press: root.valider()
