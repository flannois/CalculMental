GestionnaireFenetre:
    BoutonJouer:
    FenetreJeu:
    FenetreOptions:

<FenetreJeu>:
    name:"FenetreJeu"
    labelvie:affichagevie
    labelscore:affichagescore
    labelnb1:affichagenb1
    labelnb2:affichagenb2
    labeloperant:affichagoperant
    labelnombre:affichagenombre
    labelprecedent:affichageprecedent
    BoxLayout:
        orientation: "vertical"
        
        BoxLayout:
            size_hint_y:0.15
            Label:
                size_hint_x:0.3
                id:affichagevie
                text:"Vies : 5"
            Label:
                size_hint_x:0.3
                id:affichagescore
                text:"Score : 0"
            Button:
                size_hint_x:0.3
                text:"Options"
                on_press:
                    app.root.current = "FenetreOptions"
                    root.manager.transition.direction = "left"
        BoxLayout:
            Label:
                font_size: self.width/2
                id:affichagenb1
                text:""
            Label:
                font_size: self.width/2
                id:affichagoperant
                text:""
            Label:
                font_size: self.width/2
                id:affichagenb2
                text:""
        BoxLayout:
            Label:
                color: 1,0,0,1
                font_size: self.width/5
                id:affichageprecedent
                text:""  
        BoxLayout:
            Label:
                
                font_size: self.width/8
                id:affichagenombre
                text:""    
        GridLayout:
            id: "clavier"
            padding:10
            cols: 3
            
            Button:
                text:"1"
                on_press: app.chiffreRentre(1)
       
            Button:
                text:"2"
                on_press: app.chiffreRentre(2)
            
            Button:
                text:"3"
                on_press: app.chiffreRentre(3)
            
            Button:
                text:"4"
                on_press: app.chiffreRentre(4)
            
            Button:
                text:"5"
                on_press: app.chiffreRentre(5)
            
            Button:
                text:"6"
                on_press: app.chiffreRentre(6)
            
            Button:
                text:"7"
                on_press: app.chiffreRentre(7)
            
            Button:
                text:"8"
                on_press: app.chiffreRentre(8)
            
            Button:
                text:"9"
                on_press: app.chiffreRentre(9)
            
            Button:
                text:"Corriger"
                background_color: (1, 0.1, 0.1, 1)
                on_press: app.corriger()
            
            Button:
                text:"0"
                on_press: app.chiffreRentre(0)
            
            Button:
                text:"Valider"
                background_color: (0.1, 1, 0.1, 1)
                on_press: app.valider()

<BoutonJouer>:
    name:"Accueil"
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Salut !"
        Button:
            text:"JOUER"
            on_press:
                
                app.root.current = "FenetreJeu"
                root.manager.transition.direction = "up"

<FenetreOptions>:
    name:"FenetreOptions"
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"OPTIONS"
        Button:
            text:"Retour"
            on_press:
                app.root.current = "FenetreJeu"
                root.manager.transition.direction = "right"